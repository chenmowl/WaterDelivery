<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_apply"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_bg"
        android:scrollbars="none" />

    <RelativeLayout
        android:id="@+id/rl_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@color/activity_bg"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_circle_white"
            android:gravity="center"
            android:text="ï¼‹"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_add"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:text="@string/add_procurement"
            android:textColor="@color/text_color_bar"
            android:textSize="14sp" />

    </RelativeLayout>

    <include layout="@layout/net_loading" />

</RelativeLayout>