<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/include_tb"
        layout="@layout/tb_normal" />

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_confirm"
        android:layout_below="@+id/include_tb">

        <LinearLayout
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/info_line_height"
                android:background="@color/activity_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/logistics_info"
                android:textColor="@color/text_color_bar"
                android:textSize="@dimen/font_info_line_small" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/info_line_height02"
                android:background="@color/activity_bg">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/cline_deep" />

                <TextView
                    android:id="@+id/tv_car_number"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_align_left_margin"
                    android:text="@string/license_plate_number"
                    android:textColor="@color/text_color_bar"
                    android:textSize="@dimen/font_info_line_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_car_number"
                    android:text="冀F346443"
                    android:textColor="@color/text_color_bar"
                    android:textSize="@dimen/font_info_line_small" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/info_line_height02"
                android:background="@color/activity_bg">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/cline_deep" />

                <TextView
                    android:id="@+id/tv_driver"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_align_left_margin"
                    android:text="@string/driver"
                    android:textColor="@color/text_color_bar"
                    android:textSize="@dimen/font_info_line_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_driver"
                    android:text="微信"
                    android:textColor="@color/text_color_bar"
                    android:textSize="@dimen/font_info_line_small" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/info_line_height"
                android:layout_marginTop="10dp"
                android:background="@color/activity_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/good_info"
                android:textColor="@color/text_color_bar"
                android:textSize="@dimen/font_info_line_small" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/activity_bg"
                android:scrollbars="none" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@color/main_color_red"
        android:text="@string/affirm"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <include layout="@layout/net_loading" />


</RelativeLayout>