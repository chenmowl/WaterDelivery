<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_bg"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">


    <ImageView
        android:id="@+id/sdv_good"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:src="@mipmap/coliflor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/sdv_good"
        android:layout_alignTop="@id/sdv_good"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/sdv_good"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/tv_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="53度茅台飞天 名贵白酒正品"
            android:textColor="@color/text_color_bar"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_good_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/specs_colon"
            android:textColor="@color/hint_text_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="￥666.00"
            android:textColor="@color/main_color_red"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_ya"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_sale"
            android:background="@drawable/btn_sale"
            android:gravity="center"
            android:text="押"
            android:textColor="@color/text_color_bar"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_sale"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_sale"
            android:gravity="center"
            android:text="售"
            android:textColor="@color/text_color_bar"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/ll_number"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_above="@+id/tv_ya"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_cat_increase"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_reduce"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:text="-"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/cart_spec_tv" />

            <TextView
                android:id="@+id/tv_item_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/text_color_bar"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/cart_spec_tv" />

            <TextView
                android:id="@+id/btn_add"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/main_color_red"
                android:textSize="14sp" />

        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/sdv_good"
        android:layout_marginTop="10dp"
        android:background="@color/cline_low" />

</RelativeLayout>